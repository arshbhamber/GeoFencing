<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="Start Service"
        android:layout_width="176dp"
        android:layout_height="58dp"
        android:id="@+id/btnStartService"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnAddLocation"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.05" />

    <EditText
        android:layout_width="136dp"
        android:layout_height="46dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etLat"
        android:hint="Latitude"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toTopOf="@+id/etLong" />

    <EditText
        android:layout_width="147dp"
        android:layout_height="46dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etLong"
        android:hint="Longitude"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btnGetLocation" />

    <Button
        android:text="Add Location"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddLocation"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.83"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/etLong" />

    <Button
        android:text="Get Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnGetLocation"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <EditText
        android:layout_width="149dp"
        android:layout_height="44dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etLocationTag"
        app:layout_constraintRight_toLeftOf="@+id/btnAddLocation"
        app:layout_constraintTop_toTopOf="@+id/btnAddLocation"
        android:hint="Location Tag"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <ListView
        android:id="@+id/lvGeoList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnStartService"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />
</android.support.constraint.ConstraintLayout>
